{% extends "@SolidInvoiceCore/Layout/default.html.twig" %}

{% set module = 'profile-api' %}

{% block page_title %}{{ "profile.api.title"|trans }}{% endblock page_title %}

{% block content %}
    <div class="card card-primary">
        <div class="card-header with-border">
            <div class="float-right">
                <a href="{{ path('_xhr_api_keys_create') }}" class="btn btn-box-tool" id="create-api-token">
                    {{ icon('plus') }} {{ 'profile.api.create'|trans }}
                </a>
            </div>
            <h3 class="card-title">{{ "profile.api.title"|trans }}</h3>
        </div>

        <div class="card-body">
            <ul class="list-group" id="token-list"></ul>
        </div>
    </div>
{% endblock content %}
