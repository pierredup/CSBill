{% extends "@SolidInvoiceCore/Layout/default.html.twig" %}

{% block title %}{{ 'clients'|trans }}{% endblock title %}

{% block heading %}
    <div class="float-right header-button">
        <a class="btn btn-info" href="{{ path("_clients_add") }}">
            {{ icon('user-plus') }} {{ "client_create"|trans }}
        </a>
    </div>
    <h1>{{ block('title') is defined ? block('title') }}</h1>
{% endblock %}

{% block sidebar %}
    {{ menu('clients_index') }}
{% endblock sidebar %}

{% block content %}
    <br class="clearfix" />
    <div class="widget">
	    {{ render_multiple_grid('active_client_grid', 'archive_client_grid') }}
    </div>
{% endblock %}
