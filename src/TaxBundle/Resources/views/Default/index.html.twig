{% extends "@SolidInvoiceCore/Layout/default.html.twig" %}

{% block title %}{{ 'tax.rates.title'|trans }}{% endblock title %}

{% block content %}
    <div class="widget">
	    {{ render_grid('tax_grid') }}
    </div>
{% endblock %}

{% block heading %}
<fieldset class="page-heading">
    <legend>
        <div class="float-right header-button">
            <a class="btn btn-info" href="{{ path("_tax_rates_add") }}">
            {{ icon('money') }} {{ "tax.rates.add"|trans }}
            </a>
        </div>
        <h3>{{ block('title') is defined ? block('title') }}</h3>
    </legend>
</fieldset>
{% endblock %}
