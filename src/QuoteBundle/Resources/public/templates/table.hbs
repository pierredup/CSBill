<div class="col-12">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title"><strong>{{trans 'quote.summary' }}</strong></h3>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-condensed">
                    <thead>
                        <tr>
                            <th>
                                {{trans "quote.item.heading.description"}}
                            </th>
                            <th>
                                {{trans "quote.item.heading.price"}}
                            </th>
                            <th>
                                {{trans "quote.item.heading.qty"}}
                            </th>

                            {{#if hasTax}}
                                <th>
                                    {{trans "quote.item.heading.tax"}}
                                </th>
                            {{/if}}
                            <th class="text-right">{{trans "quote.item.heading.total"}}</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody id="quote-rows">
                    </tbody>
                    <tfoot id="quote-footer">
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
</div>

<a href="#" class="add-item col-lg-2">
    <i class="fas fa-plus-circle"></i> {{trans "quote.item.add" }}
</a>